@model IEnumerable<RestaurantWebsite.Models.Menu>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">

    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Quản lý món ăn</h4>
                    <p class="card-description">
                        <code><a asp-action="Create">Thêm mới</a></code>
                    </p>

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>

                                    <th>#</th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.menu_name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.price)
                                    </th>
                                    <td>
                                        @Html.DisplayNameFor(model => model.menu_image)
                                    </td>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ingredients)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.menu_status)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Category)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            @item.ID
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.menu_name)
                                        </td>                                        
                                        <td>
                                            @Html.DisplayFor(modelItem => item.price)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.menu_image)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ingredients)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.menu_status)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Category.ID)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.ID">Sửa</a>
                                            <a asp-action="Delete" asp-route-id="@item.ID" class="text-danger">Xóa</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
